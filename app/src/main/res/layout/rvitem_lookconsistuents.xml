<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/app_color"
        android:fontFamily="@font/montserrat_extrabold"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/clothesImagecv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/nick"/>

    <TextView
        android:id="@+id/clothesTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/clothesImagecv"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/title"
        android:textColor="@color/app_grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/clothesTitlecv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesTitleText"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_toRightOf="@+id/clothesImagecv"
        android:fontFamily="@font/montserratblack"
        android:textColor="@color/app_color"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/clothesPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesTitlecv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/clothesImagecv"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/price"
        android:textColor="@color/app_grey"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/priceRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothesPriceText"
        android:layout_toRightOf="@+id/clothesImagecv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/clothesPricecv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratblack"
            android:textColor="@color/app_color"
            android:layout_centerVertical="true"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/coinImagePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@+id/clothesPricecv"
            android:src="@drawable/ic_schoolycoinpurple" />
    </RelativeLayout>

</RelativeLayout>